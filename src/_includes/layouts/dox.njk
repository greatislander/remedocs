---
layout: base
---

<code>{{ css.info.filename }}</code>

{{ css.info.note | md | safe }}

{% for group, patterns in css.patterns | groupby("docs") %}
<section>
  <h2>{{ group or 'General' }}</h2>

  {% for pattern in patterns %}
  <article id="{{ pattern.slug }}">
    <h3>
      <a href="#{{ pattern.slug }}">
        {{ pattern.label }}
      </a>
    </h3>

    {% if pattern.issue %}
      <a href="{{ pattern.issue }}">
        github issue
      </a>
    {% endif %}
    {{ pattern.note | md | safe }}
    {% highlight "css" %}{{ pattern.css }}{% endhighlight %}
  </article>
  {% endfor %}

</section>
{% endfor %}
